<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title><%= title %></title>
<meta name="description" content="<%= description || 'Documentation and help articles' %>">
<meta name="keywords" content="<%= keywords || 'documentation, health, medical' %>">
<link rel="icon" type="image/jpg" href="/images/logo.jpg">
<script src="https://cdn.tailwindcss.com"></script>
<link href="https://cdn.jsdelivr.net/npm/quill@2/dist/quill.snow.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/quill@2/dist/quill.js"></script>
<style>
    html, body {
        min-height: 100vh;
        background-color: #f3f4f6;
        margin: 0;
        overflow: hidden;
    }
    .container {
        min-height: 100vh;              
        height: 100%;
        display: flex;
        flex-direction: column;
    }
    .sidebar {
        width: 250px;
        max-height: 100vh;           
        background: white;              
        position: sticky;               
        top: 0;
        flex-shrink: 0;
    }
    .section-list-container {
        overflow-y: auto;
        -webkit-overflow-scrolling: touch;
    }
    .main-content {
        flex: 1;
        max-height: 100vh;              
        overflow-y: auto;               
        -webkit-overflow-scrolling: touch;
        background: white;
        padding: 2rem;
        position: relative;
    }
    .main-content::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 3px;
        height: 100%;
        background: #c3cde2;
        transform: translateX(-50%);   
        z-index: 1;                    
    }

    .ql-editor {
        min-height: 300px;
    }

    .floating-message {
        position: fixed;
        bottom: 2rem;
        right: 1rem;
        z-index: 1000;
        padding: 0.75rem 1.5rem;
        border-radius: 0.375rem;
        color: white;
        font-size: 0.875rem;
        opacity: 0;
        transform: translateY(10px);
        transition: opacity 0.3s ease, transform 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .floating-message.show {
        opacity: 1;
        transform: translateY(0);
    }

    .floating-message.success {
        background-color: #10b981;
    }

    .floating-message.error {
        background-color: #ef4444;
    }

    @media (min-width: 768px) {        
        .container {
            flex-direction: row;
        }
    }
</style>