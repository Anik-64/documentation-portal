<div class="container mx-auto p-4 max-w-7xl flex flex-col md:flex-row min-h-screen gap-4">
    <div id="floatingMessage" class="floating-message"></div>
    <div class="sidebar rounded-lg p-4 flex flex-col">
        <h2 class="text-md font-bold mb-4 flex items-center gap-2">
            <img src="/images/logo.jpg" alt="Logo" class="w-16 h-16 object-contain">
            <span><%= title %></span>
        </h2>
        <button id="addSectionBtn" class="bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700   hover:to-indigo-700 text-white px-6 py-3 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:ring-offset-2 w-full flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Add Section
        </button>
        <div class="section-list-container flex-1 overflow-y-auto -mx-4 px-4 mt-2">
            <ul id="sectionList" class="space-y-2"></ul>
        </div>
    </div>
    <div class="main-content rounded-lg p-6 flex-1">
        <h1 class="text-2xl font-bold mb-4">Welcome to Documentation</h1>
        <div id="contentArea" class="prose max-w-none">
            <%- content || '<p>Select a section or create new content.</p>' %>
        </div>
        <div id="editorContainer" class="hidden mt-4">
            <div id="editor" class="border rounded"></div>
            <button id="saveContentBtn" class="bg-green-500 text-white px-4 py-2 rounded mt-4">Save Content</button>
        </div>
    </div>
</div>

<div id="addSectionModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 hidden z-50">
    <div class="bg-white rounded-lg w-full max-w-md p-6">
        <h2 id="modalTitle" class="text-lg font-semibold mb-4">Add New Section</h2>
        <form id="addSectionForm">
            <input type="hidden" id="editSecno" value="">
            <div class="mb-4">
                <label class="block mb-1 text-gray-700">Section Name <span class="text-red-500">*</span></label>
                <input id="sectionName" class="w-full border rounded px-3 py-2" required>
            </div>
            <div class="mb-4">
                <label class="block mb-1 text-gray-700">Parent Section</label>
                <select id="parentSecno" class="w-full border rounded px-3 py-2">
                    <option value="">No Parent</option>
                </select>
            </div>
            <div class="mb-4">
                <label class="block mb-1 text-gray-700">Display Order</label>
                <input id="displayOrder" type="number" min="1" class="w-full border rounded px-3 py-2" value="999">
            </div>
            <div class="mb-4">
                <label class="block mb-1 text-gray-700">Meta Description <span class="text-gray-500 text-sm">(120–160 chars recommended)</span></label>
                <textarea id="metaDescription" class="w-full border rounded px-3 py-2 h-20" placeholder="Brief summary for search engines..."></textarea>
            </div>
            <div class="mb-4">
                <label class="block mb-1 text-gray-700">Keywords <span class="text-gray-500 text-sm">(comma separated, 5–10 terms)</span></label>
                <input id="metaKeywords" class="w-full border rounded px-3 py-2" placeholder="doc, api, authentication, health">
            </div>
            <div class="flex justify-end gap-2">
                <button type="button" id="cancelAddSection" class="bg-gray-300 px-4 py-2 rounded">Cancel</button>
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Add</button>
            </div>
        </form>
    </div>
</div>